generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model articles {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  abstract      String
  article_image String
  type          articletypes @relation(fields: [article_type], references: [id])
  article_label String @db.ObjectId
  article_type  String @db.ObjectId
  content       String
  createdAt     String
  title         String
  updatedAt     String
  author        users @relation(fields: [user], references: [id])
  user          String @db.ObjectId
}

model users {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  articles   articles[] 
  createdAt  String
  email      String   @unique()
  password   String
  profilePic String
  updatedAt  String
  username   String 
}

model articletags {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  articles    String[] @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  label       String
  updatedAt   DateTime @db.Date
}

model articletypes {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  articles    articles[]
  createdAt   DateTime @db.Date
  description String
  label       String
  updatedAt   DateTime @db.Date
}

model menus {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   String
  icon        String
  name        String
  parentId    Int
  path        String
  permissions String[]
  updatedAt   String
}

model rolebemenus {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt String
  menus     String[] @db.ObjectId
  role      String   @db.ObjectId
  updatedAt String
}

model roles {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   String
  description String
  name        String
  updatedAt   String
  user        String? @db.ObjectId
}

model userberoles {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

